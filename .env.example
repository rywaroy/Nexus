# Application
NODE_ENV=development
APP_PORT=3000

# JWT Configuration
JWT_SECRET=yourSecretKey
JWT_EXPIRES_IN=24h

# Database Configuration (Prisma)
# DATABASE_TYPE: postgres | mysql | mongodb
DATABASE_TYPE=postgres
# 选择一种数据库，取消对应注释并配置 DATABASE_URL
#
# PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost:5432/nexus?schema=public"
#
# MySQL:
# DATABASE_URL="mysql://user:password@localhost:3306/nexus"
#
# MongoDB:
# DATABASE_URL="mongodb://user:password@localhost:27017/nexus?authSource=admin"
DATABASE_URL=

# MongoDB Configuration (Legacy - 保留兼容)
MONGODB_HOST=127.0.0.1
MONGODB_PORT=27017
MONGODB_DB=test
MONGODB_USER=
MONGODB_PASS=

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Aliyun OSS Configuration (可选，配置后启用 OSS 存储)
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=
OSS_REGION=oss-cn-hangzhou
OSS_ENDPOINT=
OSS_DIR=uploads

FILE_MAX_SIZE_MB=10